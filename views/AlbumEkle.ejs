<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css" />
    <title>Album Ekleme</title>
  </head>
  <body >
    <div class="container">
    <form method="POST" action="/AlbumEkle">
      <h2 class="title">Albüm Ekleme</h2>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">Album Adi</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <input class="input" type="text" name="albumAdi" />
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">Çıkış Tarihi</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <input class="input" type="date" name="cikisTarihi" />
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">Sanatci Id</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="select">
              <select name="sanatciId">
                <% veri1[0].forEach(function(singer){ %>
                <option value="<%= singer.SanatciId %>">
                  <%= singer.SanatciId %> = <%= singer.SanatciAdi %>
                </option>
                <% }); %>
              </select>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">Muzik Tur Id</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="select">
              <select name="muzikTurId">
                <% veri1[1].forEach(function(music){ %>
                <option value="<%= music.MuzikTurId %>">
                  <%= music.MuzikTurId %> = <%= music.MuzikTur %>
                </option>
                <% }); %>
              </select>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label">
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <button type="submit" class="button is-link">
                Kaydet
              </button>
              <button class="button">
                Çıkış
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
   
  </body>
</html>
